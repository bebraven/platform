<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% course_attendance_events.each do |cae| %>
          <tr>
            <td><%= cae.attendance_event.title %></td>
            <td class="text-right smaller">
              <%= link_to 'View On Canvas', cae.canvas_url %>
              <% unless local_assigns[:read_only]  %>
                 | <%= link_to 'Delete', unpublish_course_course_attendance_event_path(@course, cae), method: :delete,
                                      data: { confirm: 'Are you sure you want to delete this item?' } %> 
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
