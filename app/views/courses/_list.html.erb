<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">
      <%= title %>
    </li>
  </ol>
</nav>

<div class="container">
  <% if button_label %>
    <div class="d-flex justify-content-end">
      <%= link_to button_label, button_url, class: "btn btn-primary", role: "button" %>
    </div>
  <% end %>

  <table class="table mt-2">
    <tbody>
    <% courses.each do |course| %>
      <tr>
        <td>
          <%= link_to course.name, course.canvas_url %>
          <span class="badge badge-primary">Course</span>
        </td>
        <td class="text-right">
          <%# Eventually we may want to support editing or deleting a launched course, but we don't currently %>
          <% unless course.is_launched %>
            <%= link_to 'Edit', edit_course_path(course) %> |
            <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
