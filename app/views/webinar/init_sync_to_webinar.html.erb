<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Update Webinars</li>
  </ol>
</nav>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <legend>Update Program Participants Webinars</legend>
      <%= form_with(url: sync_to_webinar_path, method: "post", local: true) do |form| %>
        <div class="form-group">
          <%= form.label :program_id, "Program ID:" %>
          <%= form.text_field :program_id, autofocus: true, class: "form-control", required: true, placeholder: "a34scx992...", autocomplete: "salesforce-program-id" %>
        </div>
      
        <div class="form-group">
          <%= form.label :email, "Email:" %>
          <%= form.email_field :email, class: "form-control", required: true, placeholder: "you@example.com", autocomplete: "email" %>
        </div>
      
        <div class="form-group form-check">
          <%= form.check_box :force_update, class: "form-check-input", id: "force_update_check" %>
          <%= form.label :force_update, "Force Update", class: "form-check-label", for: "force_update_check" %>
        </div>
      
        <div class="actions">
          <%= form.submit "Update Webinar Links", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm">
      <%= link_to "Generate Webinars", generate_webinar_path, type: "button", class: "btn btn-secondary float-right" %>
    </div>
  </div>
</div>
