<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Generate Webinar</li>
  </ol>
</nav>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <legend>Generate Webinar Links for Meeting</legend>
      <%= form_with(url: generate_webinar_path, method: "post", local: true) do |form| %>
        <div class="form-group">
          <%= form.label :meeting_id, "Meeting ID:" %>
          <%= form.text_field :meeting_id, class: "form-control", required: true, placeholder: "8960564609", autocomplete: "meeting_id" %>
        </div>

        <div class="form-group">
          <%= form.label :participants, "Meeting Participants:" %>
          <%= form.file_field :participants, class: "form-control-file", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email:" %>
          <%= form.email_field :email, class: "form-control", required: true, placeholder: "you@example.com", autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= form.submit "Generate Webinar Links", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm"></div>
  </div>
</div>
