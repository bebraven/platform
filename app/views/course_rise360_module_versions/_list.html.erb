<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% course_rise360_module_versions.each do |crmv| %>
          <tr>
            <td><%= link_to crmv.rise360_module_version.name, crmv.canvas_url %></td>
            <td class="text-right smaller">
              <%= link_to 'Publish Latest', course_course_rise360_module_version_path(@course, crmv.id), method: :put %> |
              <%= link_to 'Delete', unpublish_course_course_rise360_module_version_path(@course, id: crmv.id), method: :delete,
                                    data: { confirm: 'Are you sure you want to remove this module?' } %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
