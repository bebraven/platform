<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">
      <%= title %>
    </li>
  </ol>
</nav>

<div class="container">
  <% if button_label %>
    <div class="d-flex justify-content-end">
      <%= link_to button_label, button_url, class: "btn btn-primary", role: "button" %>
    </div>
  <% end %>

  <table class="table mt-2">
    <tbody>
    <% base_courses.each do |base_course| %>
      <tr>
        <td>
          <%= link_to base_course.name, base_course %>
          <% if base_course.type %>
            <span class="badge badge-primary">
              <%= humanized_type(base_course) %>
            </span>
          <% end %>
        </td>
        <td class="text-right">
          <%= link_to 'Edit', edit_polymorphic_path(base_course) %> |
          <%= link_to 'Delete', base_course, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
