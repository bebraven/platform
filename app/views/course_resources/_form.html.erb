<%= form_tag course_resources_path, method: :post, multipart: true do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, '', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :course_resource_zipfile, 'Rise 360 zipfile' %>
    <%= file_field_tag :course_resource_zipfile, :accept => "application/zip" %>
  </div>

  <div class="actions">
    <%= submit_tag 'Save' %>
    <%= link_to 'Cancel', courses_path, class: 'btn btn-secondary'%>
  </div>
<% end %>
