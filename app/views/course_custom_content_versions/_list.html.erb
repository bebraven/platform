<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% course_custom_content_versions.each do |cccv| %>
          <tr>
            <td><%= link_to cccv.custom_content_version.title, cccv.canvas_url %></td>
            <td class="text-right smaller">
              <% unless local_assigns[:read_only]  %>
                <%= link_to 'Publish Latest', course_custom_content_version_path(cccv.id), method: :put %> |
                <%= link_to 'Delete', course_custom_content_version_path(cccv.id), method: :delete,
                                      data: { confirm: 'Are you sure you want to delete this item?' } %> 
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
