<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% base_course_custom_content_versions.each do |bcccv| %>
          <tr>
<!-- TODO: if this will handle both projects and surveys, figure this out. Need to use a polymorphic path -->
            <td><%= link_to bcccv.custom_content_version.title, new_base_course_custom_content_version_project_submission_url(bcccv) %></td>
            <td class="text-right smaller">
              <%= link_to 'Publish Latest', base_course_base_course_custom_content_version_path(bcccv.base_course_id, bcccv.id), method: :put %> |
              <%= link_to 'Delete', base_course_base_course_custom_content_version_path(bcccv.base_course_id, bcccv.id), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
