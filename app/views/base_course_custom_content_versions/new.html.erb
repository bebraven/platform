<div>
  <div class="row">
    <div class="col-sm-4">

      <h4>Select a <%= params[:type] %> to create in Canvas</h4>
      <%= form_with url: base_course_base_course_custom_content_versions_path do |form| %>
        <div class="form-group">
          <div class="row">
            <%= form.label :name, class: 'col-sm-3' %>
            <%= form.collection_select :custom_content_id, @new_custom_contents, :id, :title, {}, class: 'form-control col-sm-8' %> 
          </div>
        </div>   

        <% if for_project? %>

        <div class="form-group">
          <div class="row">
            <%= form.label :rubric, class: 'col-sm-3' %>
            <%= form.collection_select :rubric_id, @rubrics, :id, :title, {include_blank: true}, class: 'form-control col-sm-8' %> 
          </div>
          <em><small>* Note: only rubrics not already associated with a Project are shown</small></em>
        </div>   
        <% end %>

        <input type='hidden' id="base_course_id" name='base_course_id' value='<%= @base_course.id %>' />
        <input type='submit' value='Create' />
      <% end %>

    </div>
  </div>
</div>
